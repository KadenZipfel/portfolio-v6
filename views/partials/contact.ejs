<div class="bg">
  <div class="container">
    <section class="contact" data-aos="zoom-in">
      <form action="/" method="POST" class="contact__form">
        <h1 class="contact__form__title">Contact</h1>
        <input type="text" class="contact__form__input" name="name" placeholder="Your name" required>
        <input type="email" class="contact__form__input" name="email" placeholder="Your email" required>
        <input type="text" class="contact__form__input" name="subject" placeholder="Subject" required>
        <textarea name="message" rows="5" class="contact__form__textarea" placeholder="Message..." required></textarea>
        <button class="contact__form__btn">Send Message</button>
      </form>
    </section>
  </div>
</div>