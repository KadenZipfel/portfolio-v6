<div class="bg">
  <div class="container">
    <section class="contact">
      <form action="/" method="POST" class="contact__form">
        <h1 class="contact__form__title" data-aos="zoom-in">Contact</h1>
        <input type="text" class="contact__form__input" name="name" placeholder="Your name" data-aos="zoom-in" required>
        <input type="email" class="contact__form__input" name="email" placeholder="Your email" data-aos="zoom-in" required>
        <input type="text" class="contact__form__input" name="subject" placeholder="Subject" data-aos="zoom-in" required>
        <textarea name="message" rows="5" class="contact__form__textarea" placeholder="Message..." data-aos="zoom-in" required></textarea>
        <button class="contact__form__btn" data-aos="zoom-in">Send Message</button>
      </form>
    </section>
  </div>
</div>